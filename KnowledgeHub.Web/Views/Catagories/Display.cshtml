@using KnowledgeHub.Web.Models.Data;
@using System.Data
@using KnowledgeHub.Web.Models.Entities
@model List<KnowledgeHub.Web.Models.Entities.Catagory>   

    <h4>@TempData["Message"]</h4>
    <a asp-action="Create" class="btn btn-primary">Create New Catagory</a>
    <form asp-action="Display" method="">
            
          <input type="text" name="search" placeholder="Enter the keyword to Search" />
           <input type="submit" name="btnSubmit" value="Search" /> 

    </form>
   
    @*<div class="scroll_table_display">*@
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var item  in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CatagoryId" >Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CatagoryId" >Delete</a>
                </td>
            </tr>  
        }
        </tbody>
        
    </table>
    
  


